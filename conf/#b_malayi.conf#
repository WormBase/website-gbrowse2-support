forwardcolor = violet
reversecolor = turquoise
utr_color    = gainsboro
font2color   = blue
height        = 10
label density = 100
bump density  = 500
label_transcripts = sub { shift->get_SeqFeatures('mRNA') > 1 }
label = 1
